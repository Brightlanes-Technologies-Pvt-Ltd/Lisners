<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:paddingTop="@dimen/size_30"
        android:paddingBottom="@dimen/size_15">
        <RelativeLayout
            android:background="@drawable/button_light_primary"
            android:layout_width="@dimen/size_40"
            android:padding="@dimen/size_5"
            android:layout_marginStart="@dimen/size_5"
            android:layout_height="@dimen/size_40">
            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"

                />

            <TextView
                android:id="@+id/iv_char_drawer"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_20" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/size_10">

            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:lines="1"
                android:text="Nicholas Doyle"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                tools:ignore="SpUsage" />

            <TextView

                android:id="@+id/tv_header_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=" "
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12"
                tools:ignore="SpUsage" />
        </LinearLayout>
         <ProgressBar
             android:id="@+id/sw_header_loader"
             android:visibility="gone"
             android:layout_width="@dimen/size_25"
             android:layout_height="@dimen/size_25"/>
        <Switch
            android:id="@+id/sw_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <include layout="@layout/single_line" />
</LinearLayout>